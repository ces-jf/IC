@using IC2020.Models
@model IEnumerable<Item>

@{ ViewBag.Title = "Resultados da Pesquisa";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h1>@ViewData["Title"]</h1>
<br />
<div class="panel-body body-content">
    <table class="table table-sm table-hover table-borderless m-1">
        <tbody>

            @if (Model == null)
            {
<tr>
    <td class="error-warning">
        Nenhum resultado encontrado.
    </td>
</tr> }
            else
            {
@foreach (var rep in Model)
{
<tr>
    <td>@Html.ActionLink(rep.name, "RepInfo", rep)</td>
</tr>}}
        </tbody>
    </table>
</div>

<a class="btn btn-success" onclick="history.back();">Voltar</a>


